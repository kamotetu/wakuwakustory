<div class="wrapper">
  <div class="btn_space">
  <%if user_signed_in?%>
    <div class="header_btn_left_content">
      <p class="current_user_nickname">
        こんにちは<%=current_user.nickname%>さん
      </p>
      <div class="header_my_image_area">
        <% if current_user.persisted? && current_user.my_image? %>
          <%=image_tag current_user.my_image.to_s, class: :header_my_image_icon%>
        <%else%>
          <%=image_tag "no_avatar.png", class: :header_my_image_icon%>
        <%end%>
      </div>
    </div>
    <div class="header_btn_right_content">
      <ul class="right_content_btns">
        <%=link_to new_maintitle_path, class: "post_tag sign_btn" do%>
          <li id="right_content_btn">
              投稿する
          </li>
        <%end%>
        <%=link_to mypagemain_user_path(current_user), class: "sign_btn" do%>
          <li id="right_content_btn">
            マイページ
          </li>
        <%end%>
        <%=link_to destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"}, class: "sign_btn" do%>
          <li id="right_content_btn">
            ログアウト
          </li>
        <%end%>
      </ul>
    </div>
  <%else%>
    <div class="header_btn_left_content">
      <p class="current_user_nickname">
        こんにちはゲストさん
      </p>
    </div>
    <div class="header_btn_right_content">
      <ul class="right_content_btns"> 
        <%=link_to new_user_registration_path, class: "sign_btn" do%>
          <li id="right_content_btn">
            新規登録
          </li>
        <%end%>
        <%=link_to new_user_session_path, class: "sign_btn" do %>
          <li id="right_content_btn">
            ログイン
          </li>
        <%end%>
      </ul>
    </div>
  <%end%>
  </div>
</div>