<%=form_with model: @stories, local:true do |f|%>
  <div class="form-group">
    <%=f.label :title%>
    <%=f.text_field :title, class: 'form-control', id: 'task_name'%>
  </div>
  <div class="form-group">
    <%=f.label :story%>
    <%=f.text_area :story, rows: 5, class: 'form-control', id: 'task_description'%>
  </div>
  <div class="form-group">
    <%=f.label :tag_list%>
    <%=f.text_field :tag_list, value: @stories.tag_list.join(','), class: "form-control"%>
  </div>
  <%=f.submit nil, class: 'btn btn-primary'%>
<%end%>